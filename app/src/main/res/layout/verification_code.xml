<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/verification_otp_backgrounnd">


    </ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:alpha="0.8"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        app:cardCornerRadius="20dp"
        android:elevation="10dp">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@drawable/registration_custom_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_otp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/verification_code"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/verifydesc"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/codelayout"
                        android:weightSum="6"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/numone"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:background="@drawable/edit_field"
                            android:maxLength="1"
                            android:ems="1"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:textSize="35sp"/>

                        <EditText
                            android:id="@+id/numtwo"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:background="@drawable/edit_field"
                            android:layout_marginLeft="10dp"
                            android:ems="1"
                            android:layout_weight="1"
                            android:maxLength="1"
                            android:textColor="@color/black"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:textSize="35sp" />

                        <EditText
                            android:id="@+id/numthree"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:background="@drawable/edit_field"
                            android:layout_marginLeft="10dp"
                            android:ems="1"
                            android:maxLength="1"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:textSize="35sp" />

                        <EditText
                            android:id="@+id/numfour"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:background="@drawable/edit_field"
                            android:layout_marginLeft="10dp"
                            android:ems="1"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:maxLength="1"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:textSize="35sp" />

                        <EditText
                            android:id="@+id/numfive"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:background="@drawable/edit_field"
                            android:layout_marginLeft="10dp"
                            android:ems="1"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:maxLength="1"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:textSize="35sp" />

                        <EditText
                            android:id="@+id/numsix"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:background="@drawable/edit_field"
                            android:layout_marginLeft="10dp"
                            android:ems="1"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:maxLength="1"
                            android:inputType="number"
                            android:gravity="center"
                            android:textSize="35sp" />

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/verify_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/ripple_background"
                    android:layout_marginTop="30dp"
                    android:text="@string/verify"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>

</FrameLayout>



</LinearLayout>