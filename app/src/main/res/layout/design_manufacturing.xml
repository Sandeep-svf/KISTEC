<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:alpha="0.6"
        app:cardCornerRadius="14dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/registration_custom_design"
                >


                <LinearLayout
                    android:id="@+id/l1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/heading">
                    </TextView>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/name"
                    android:textSize="@dimen/fab_margin"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp">

                </TextView>

                <LinearLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:weightSum="6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/nameDetials"
                        android:inputType="text"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:textColorHint="@color/hint"
                        android:textSize="@dimen/fab_margin"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content">
                    </EditText>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/old_password_eye"
                        android:src="@drawable/user"
                        android:tint="@color/white"
                        android:layout_marginBottom="5dp"
                        tools:ignore="UseAppTint"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                    </ImageView>


                </LinearLayout>
                <View
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white">
                </View>


                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/personMobile"
                    android:textSize="@dimen/fab_margin"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp">

                </TextView>
                <LinearLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:weightSum="6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/mobileDetails"
                        android:inputType="phone"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:textSize="@dimen/fab_margin"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content">
                    </EditText>
                    <ImageView
                        android:visibility="gone"
                        android:src="@drawable/phone_call_icon"
                        android:tint="@color/white"
                        android:layout_marginBottom="5dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="UseAppTint">
                    </ImageView>


                </LinearLayout>
                <View
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white">
                </View>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/personIndentification"
                    android:textSize="@dimen/fab_margin"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp" />

                <LinearLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:weightSum="6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/personIdDetails"
                        android:inputType="text"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:textColorHint="@color/hint"
                        android:textSize="@dimen/fab_margin"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content">
                    </EditText>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/confirm_password_eye"
                        android:src="@drawable/eye"
                        android:tint="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="UseAppTint">
                    </ImageView>


                </LinearLayout>
                <View
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white">
                </View>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/personType"
                    android:textSize="@dimen/fab_margin"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp" />

                <LinearLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:weightSum="6"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                     <Spinner
                         android:layout_weight="4"
                            android:id="@+id/editSpinPersonType"
                            android:layout_width="match_parent"
                            android:entries="@array/personType"
                            android:spinnerMode="dialog"
                            android:background="@android:color/transparent"
                            android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:tint="@color/white"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/arrow_down_sign_to_navigate"
                        tools:ignore="UseAppTint">
                    </ImageView>


                </LinearLayout>
                <View
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white">
                </View>

                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recRecordImage"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="10dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:visibility="gone"
                            android:id="@+id/recRecordImage2"
                            android:layout_width="match_parent"
                            android:layout_height="150dp">

                        </androidx.recyclerview.widget.RecyclerView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:id="@+id/editRecordImportDocument"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="60dp"
                                android:layout_marginRight="60dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/ripple_background">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Import Document"
                                    android:textColor="@color/white">
                                </TextView>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Person"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp">

                </TextView>
                <LinearLayout
                    android:background="@drawable/custom_border_only"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/editAboutUsDetails"
                        android:padding="10dp"
                        android:text="@string/aboutPerson"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:maxLines="5"

                        >
                    </EditText>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp">


                    <LinearLayout
                        android:id="@+id/editRecordSubmitLayout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_border">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/submit"
                            android:textSize="@dimen/submit_layout"
                            android:textColor="@color/white">
                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- <LinearLayout
                     android:layout_marginTop="50dp"
                     android:id="@+id/updateProifleLayout"
                     android:layout_width="match_parent"
                     android:layout_height="40dp"
                     android:layout_marginLeft="50dp"
                     android:layout_marginBottom="20dp"
                     android:layout_marginRight="50dp"
                     android:background="@drawable/registration_custom_design"
                     android:orientation="horizontal">


                 </LinearLayout>-->

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>