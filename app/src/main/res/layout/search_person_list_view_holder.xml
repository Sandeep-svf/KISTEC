<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="100dp"
    android:weightSum="4.2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.6">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personProfileList"
            android:layout_width="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_height="80dp"
            android:src="@drawable/person_profile">
        </de.hdodenhof.circleimageview.CircleImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:singleLine="true"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:id="@+id/personNameList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Julia Martian"
                ></TextView>
            <TextView
                android:layout_below="@+id/personNameList"
                android:id="@+id/aboutPersonList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Writer of (Stream page name)"
                ></TextView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.6">

        <androidx.cardview.widget.CardView
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp">

            <RelativeLayout
                android:id="@+id/sendShareFriend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/jhjh"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    android:gravity="center">
                </TextView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>







</LinearLayout>