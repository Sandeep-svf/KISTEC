<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="0dp" android:color="@color/darkblue" />
            <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp" />
            <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:topLeftRadius="10dp" android:topRightRadius="10dp" />
            <solid android:color="@color/Darkwhite" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/Darkwhite" />
            <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp" />
            <corners  android:radius="2dp"></corners>
            <gradient android:startColor="@color/blue_final" android:endColor="@color/red_final"></gradient>
        </shape>
    </item>
</selector>